# =============================================================================
# ARS_MP Environment Variables (Example)
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# -----------------------------------------------------------------------------
# Legacy Access Database Connection
# -----------------------------------------------------------------------------
# Path to the Access database file (relative or absolute)
LEGACY_ACCESS_DB_PATH=docs/legacy_bd/Accdb/DB_CCEE_Programaci√≥n 1.1.accdb

# Database password (optional - leave empty for unprotected databases)
# LEGACY_ACCESS_DB_PASSWORD=

# ODBC Driver (usually auto-detected, override if needed)
# LEGACY_ACCESS_ODBC_DRIVER=Microsoft Access Driver (*.mdb, *.accdb)

# Query timeout in seconds (0 to disable, default is 30)
# LEGACY_ACCESS_QUERY_TIMEOUT=30

# -----------------------------------------------------------------------------
# Django Database Configuration
# -----------------------------------------------------------------------------
# Use "postgres" to enable PostgreSQL (Docker) or leave unset for SQLite
# DJANGO_DB_ENGINE=postgres

# PostgreSQL (Docker local)
# POSTGRES_DB=ars_mp
# POSTGRES_USER=ars_mp
# POSTGRES_PASSWORD=ars_mp
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
